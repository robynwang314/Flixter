<div class="col-10 offset-1"> 
  <br /><br />
  <div class="user-authentication-headers">
    <h1 class="text-center"><%= @course.title %>
    <hr />
    <%= image_tag @course.image.to_s, class: 'img-fluid' %></h1>
    <br /><br />

  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <span class="badge badge-primary">
        <%= number_to_currency @course.cost %>
      </span>

      <% if current_user && current_user == @course.user %>
        <br />
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-outline-danger btn-sm' %>
      <% end %>

      <br />
      <br />

      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
          <h3 class="badge badge-info"> You Are Enrolled!</h3>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-outline-primary btn-sm', method: :post %>
          <% else %>
            <%= form_tag course_enrollments_path(@course) do %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-email="<%= current_user.email %>"
                      data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <h3 class="badge badge-info">Sign In to Enroll!</h3>
      <% end %>
    </div>

    <div class="col-sm-8 col-12">
      <%= @course.description %>
    </div>
  </div>

  <br />

    <div class="col-12">
      <% @course.sections.each do |section| %>
      <br />
        <div class="section">
          <%= section.title %>
            <div class="row">
              <% section.lessons.rank(:row_order).each do |lesson| %>
                <div class="col-12 col-sm-6">
                  <div class="lesson text-center">
                    <br />
                    <%= link_to lesson_path(lesson) do %>
                      <b><%= lesson.title %></b>
                      <br />
                      <%= lesson.subtitle %>
                    <% end %>
                  </div>
                </div> 
              <% end %>
            </div> 
            <br class="clr" />
        </div>
      <% end %>
    </div>
</div>
