<div class="col-10 offset-1"> 
  <br /><br />
  <div class="user-authentication-headers">
    <h1 class="text-center">Learn Something Today</h1>
    <hr />

    <br />
    <% @courses.each do |course| %>
      <h4 class="text-center"><%= course.title %></h4>
      <br />

      <div class="row">
        <div class="col-sm-8 col-12">
          <%= course.description %>
        </div>
        <div class="col-sm-4 col-12 text-center">
          <%= link_to 'Button', '#', class: 'btn btn-outline-primary' %>
        </div>
      </div>
      <br class="clr" />
    <% end %>
  </div>
</div>
  