<div class="col-10 offset-1"> 
  <br /><br />
  <div class="user-authentication-headers">
      <h1 class="text-center"><%= current_course.title %>
      <hr />
      <%= image_tag current_course.image.to_s, class: 'img-fluid' %><h2>
  <br />

    <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-outline-danger float-right' %>
    <br class="clr" />

    <div class="text-center">
      <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-outline-primary btn-md' %>
    </div>
  </div>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-outline-primary btn-sm' %>
        <ul>
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>-
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
  
</div>