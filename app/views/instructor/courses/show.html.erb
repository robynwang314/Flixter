<div class="col-10 offset-1"> 
  <br /><br />
  <div class="user-authentication-headers">
      <h2 class="text-center"><%= @course.title %></h2>
      <hr />
  <br />

    <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-outline-danger float-right' %>
    <br class="clr" />

    <div class="text-center">
      <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-outline-primary btn-md' %>
    </div>
  </div>

  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-outline-primary btn-sm' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>-
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>
  
</div>